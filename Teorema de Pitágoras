programa{
	inclua biblioteca Matematica --> mat
	funcao inicio(){
		real catetoA, catetoB, hipotenusa

		escreva("Digite o valor do cateto A: ")
		leia(catetoA)
		escreva("Digite o valor do cateto B: ")
		leia(catetoB)

		hipotenusa = mat.raiz(mat.potencia(catetoA, 2.0) + mat.potencia(catetoB, 2.0), 2.0)

		escreva("O valor da hipotenusa Ã©: ", mat.arredondar(hipotenusa, 2))
	}
}
