programa{
	funcao inicio(){
		inteiro numero
		inteiro contadorDivisores = 0

		escreva("Digite um número para verificar se é primo: ")
		leia(numero)

		para (inteiro i = 1; i <= numero; i++)
			se (numero % i == 0)
				contadorDivisores = contadorDivisores + 1
		se (contadorDivisores == 2)
			escreva(numero, " É Primo.")
		senao
			escreva(numero, " Não é Primo (tem ", contadorDivisores, " divisores).")
	}
}
