programa {
  funcao inicio() {
    inteiro a, b, c


    escreva("Digite o primeiro número: \n")
    leia(a)
    escreva("Digite o segundo número: \n")
    leia(b)
    escreva("Digite o teceiro número: \n")
    leia(c)


    se ((a > b) e (a > c))
    escreva("O primeiro número é maior: ", a)
    senao se (b > c)
    escreva("O segundo número é maior: ", b)
    senao
    escreva("O terceiro é número é maior: ", c)
  }
}
