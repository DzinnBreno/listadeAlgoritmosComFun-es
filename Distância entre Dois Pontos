programa{
	inclua biblioteca Matematica --> mat
	funcao inicio(){
		real x1, y1, x2, y2, distancia

		escreva("Digite x1: ")
		leia(x1)
		escreva("Digite y1: ")
		leia(y1)
		
		escreva("Digite x2: ")
		leia(x2)
		escreva("Digite y2: ")
		leia(y2)

		real diferencaX = mat.potencia(x2 - x1, 2.0)
		real diferencaY = mat.potencia(y2 - y1, 2.0)
		
		distancia = mat.raiz(diferencaX + diferencaY, 2.0)

		escreva("A distância entre os pontos é: ", mat.arredondar(distancia, 2))
	}
}
